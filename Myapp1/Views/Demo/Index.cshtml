@{
    ViewData["Title"] = "Liên Hệ";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4" style="font-size: 2.5rem; font-weight: bold; color: #222;">Liên Hệ Với Chúng Tôi</h2>

    <div class="row">
       
        <div class="col-md-6 mb-4">
            <h4 style="color: #333;">Thông Tin Liên Hệ</h4>
            <p><strong>Địa chỉ:</strong>Yên Xá, Hà đông , Hà Nội</p>
            <p><strong>Điện thoại:</strong> 0909 123 456</p>
            <p><strong>Email:</strong> info@cuahangmoto.vn</p>
            <p><strong>Giờ làm việc:</strong> 08:00 - 18:00 (Thứ 2 - Thứ 7)</p>
            <p><strong>Facebook:</strong> <a href="https://www.facebook.com/pham.tuan.290500">Phạm Tuấn</a></p>
        </div>


        <div class="col-md-6">
            <h4 style="color: #333;">Gửi Tin Nhắn</h4>
            <form>
                <div class="form-group">
                    <label for="name">Họ và Tên</label>
                    <input type="text" class="form-control" id="name" placeholder="Nhập họ tên của bạn" required>
                </div>
                <div class="form-group">
                    <label for="email">Địa chỉ Email</label>
                    <input type="email" class="form-control" id="email" placeholder="example@email.com" required>
                </div>
                <div class="form-group">
                    <label for="message">Nội dung</label>
                    <textarea class="form-control" id="message" rows="5" placeholder="Nội dung tin nhắn..." required></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Gửi Liên Hệ</button>
            </form>
        </div>
    </div>
</div>
